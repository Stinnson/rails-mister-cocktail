<div class="text-center">
  <h1>Update a Doses</h1>
</div>

<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">

      <%=  simple_form_for([@cocktail, @dose]) do |f| %>
      <%= f.input :description, as: :text%>
      <%= f.input :ingredient_id, collection: Ingredient.all, prompt: "List of ingredients", selected: Ingredient.first %>

      <%= f.submit 'Update Cocktail!', class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>

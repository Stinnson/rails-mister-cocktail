
<div class="text-center">
  <h1>Add a cocktail</h1>
</div>

<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">

      <%=  simple_form_for(@cocktail) do |f| %>
      <%= f.input :name, as: :text%>
      <%= f.submit 'Create Cocktail!', class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
